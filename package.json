{
  "name": "minikani-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "check-format": "prettier --check \"**/*.{js,jsx,json,jsonc,md,css}\"",
    "clean": "rimraf .turbo node_modules",
    "lint": "turbo run lint --",
    "pre-commit": "lint-staged --verbose --concurrent false",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "pnpm lint"
    ],
    "**/*.{json,jsonc,html,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@minikani/prettier-config",
  "devDependencies": {
    "@turbo/gen": "^2.0.13",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.12"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.16.x",
    "npm": "Please use pnpm to install dependencies",
    "pnpm": ">=9.x"
  },
  "volta": {
    "node": "20.16.0"
  }
}
