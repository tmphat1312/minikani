{
  "name": "minikani-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "pre-commit": "lint-staged -v",
    "prepare": "husky"
  },
  "lint-staged": {
    "{apps,packages}/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{json,jsonc,html,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.1"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.16.x",
    "npm": "Please use pnpm to install dependencies",
    "pnpm": ">=9.x"
  },
  "volta": {
    "node": "20.16.0"
  }
}
